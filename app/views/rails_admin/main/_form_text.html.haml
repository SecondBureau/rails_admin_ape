= form.send field.view_helper, field.method_name, field.html_attributes
    
- if field.tinymce
  -# for tinymce rich editor
  = javascript_include_tag "tinymce-jquery"
  = javascript_include_tag "tinymce_config"
  = javascript_tag do
    jQuery(function(){
    jQuery("##{field.dom_id}").tinymce(tinymce_config);
    });
- elsif field.ckeditor
  -# needed for modal windows
  = javascript_tag do
    var CKEDITOR_BASEPATH = '/javascripts/ckeditor/';
  = javascript_include_tag "/javascripts/ckeditor/ckeditor.js"
  = javascript_tag do
    jQuery(function($) {
    if(!$("#modal").length){
    CKEDITOR.replace('#{field.dom_id}', { customConfig : '#{field.ckeditor_config_js.html_safe}' });
    }
    });

